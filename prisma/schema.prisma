generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String @unique
  posts    post[]
}

model post {
  id          Int @id @default(autoincrement())
  createdAt   DateTime @default(now())
  image       String?
  title       String
  description String
  userId      Int
  author      user @relation(fields: [userId], references: [id])
}
